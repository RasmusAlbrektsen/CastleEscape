<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<item>
    <name>poker</name>
    <description>A long and slim metal poker. Perfect for reaching things from a distance.</description>
    <events>
        <event>
            <trigger>barred door</trigger>
            <type>addRoomItem</type>
            <description>The bar on the door releases, and the door finally unlocks.</description>
            <item>main door</item>
        </event>
        <event>
            <trigger>barred door</trigger>
            <type>removeRoomItem</type>
            <description/>
            <item>barred door</item>
        </event>
        <event>
            <trigger>barred door</trigger>
            <type>addExit</type>
            <description/>
            <destination>Garden</destination>
            <direction>north</direction>
        </event>
        <event>
            <trigger>barred door</trigger>
            <type>setDescription</type>
            <description>The great hall is mighty big. There is a staircase to the upper floor, but it has been barricaded by lots of old furniture and statues. The main door to the north is unlocked, go to freedom!</description>
            <room>Great Hall</room>
        </event>
    </events>
</item>
